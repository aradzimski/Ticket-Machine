<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_name_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="@dimen/h6"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_view_last_name_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/text_view_name_account"
        android:layout_margin="10dp"
        android:textSize="@dimen/h6"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_view_email_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/text_view_last_name_account"
        android:layout_margin="10dp"
        android:textSize="@dimen/h6"/>

</RelativeLayout>